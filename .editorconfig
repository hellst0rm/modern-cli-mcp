# EditorConfig: https://EditorConfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.nix]
indent_size = 2

[*.rs]
indent_size = 4

[*.{yaml,yml,toml,json}]
indent_size = 2

[*.{js,ts,tsx,jsx}]
indent_size = 2

[*.{css,scss,html}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[Dockerfile]
indent_size = 4
